    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default" id="header">
            <div class="container-fluid">
                <div class="navbar-header">
                    <div id="company-logo">
                        <span id="company-name"><a class="navbar-brand title-link">@Html.ActionLink("SalesTracker", "Index", "Account")</a></span>
                        
                    </div>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Create Item", "Create", "Inventory")</li>
                </ul>
            </div>
        </nav>
        @RenderBody()
    </div>
    <div class="container">
        <footer class="footer">

            @if (User.Identity.IsAuthenticated)
            {
                <ul class="list-inline">
                    <li>
                        @using (Html.BeginForm("LogOff", "Account"))
                        {
                            <input type="submit" id="logout" value="Logout" />
                        }
                    </li>
                </ul>
            }
            else
            {
                <ul class="list-inline">
                    <li>@Html.ActionLink("Register", "Register")</li>
                    <li>@Html.ActionLink("Login", "Login")</li>
                </ul>
            }
        </footer>
    </div>

</body>
</html>